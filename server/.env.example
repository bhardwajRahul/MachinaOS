# Server Configuration
HOST=0.0.0.0
PORT=3010
DEBUG=false
WORKERS=1

# Security (REQUIRED - Generate secure keys for production)
SECRET_KEY=your-secret-key-32-characters-minimum-length
API_KEY_ENCRYPTION_KEY=your-encryption-key-32-characters-minimum

# CORS Configuration
CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# Database Configuration
DATABASE_URL=sqlite+aiosqlite:///./data/workflow.db
DATABASE_ECHO=false
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=30

# Cache Configuration (Optional - Redis for production)
REDIS_URL=redis://localhost:6379/0
REDIS_ENABLED=false
CACHE_TTL=3600

# WebSocket Configuration (For remote Android device connections)
WEBSOCKET_URL=
WEBSOCKET_API_KEY=
ANDROID_RELAY_URL=

# WhatsApp Service URL
WHATSAPP_SERVICE_URL=http://localhost:5000

# External API Keys (Optional - Set only if you have them)
# These are user-managed through the UI, but you can set defaults here
# GOOGLE_MAPS_API_KEY=your-google-maps-api-key
# OPENAI_API_KEY=your-openai-api-key
# ANTHROPIC_API_KEY=your-anthropic-api-key
# GOOGLE_AI_API_KEY=your-google-ai-api-key

# API Key Management
API_KEY_CACHE_TTL=2592000

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json
# LOG_FILE=./logs/app.log

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60

# Service Timeouts
AI_TIMEOUT=30
AI_MAX_RETRIES=3
AI_RETRY_DELAY=1.0

MAPS_TIMEOUT=10
MAPS_MAX_RPS=50

# Health Check
HEALTH_CHECK_INTERVAL=30